{
  "env": {
    "browser": true,
    "es2022": true,
    "jest/globals": true,
    "node": true,
    "worker": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:jest/recommended",
    "plugin:jest/style",
    "plugin:@tanstack/eslint-plugin-query/recommended",
    "next/core-web-vitals",
    "prettier"
  ],
  "rules": {
    "no-console": ["warn", { "allow": ["warn", "error"] }],
    "no-undef": "warn",
    "no-unused-vars": ["warn", { "varsIgnorePattern": "^_" }],
    "prefer-const": "off",

    "react/display-name": "off"
  }
}
